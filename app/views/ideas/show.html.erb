<h1><%= @idea.title %></h1>
<hr>

<%= @idea.description %>
<hr>
<%= link_to "Back to My Ideas", profile_path, class: "btn btn-primary" %>
<%= link_to edit_idea_path(@idea), class: "btn btn-success" do %>
  <i class="glyphicon glyphicon-pencil"></i>
<% end %>
<%= link_to idea_path(@idea), method: :delete, class: "btn btn-danger" do %>
  <i class="glyphicon glyphicon-trash"></i>
<% end %>
