<div class="text-center">
  <%= form_for @idea do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br><br>

    <%= f.collection_select :category_id, @categories, :id, :name %><br><br>

    <%= f.hidden_field :user_id %>
    <%= f.submit %>
  <% end %>
</div>
